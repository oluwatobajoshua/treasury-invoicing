<?php
/**
 * @var \App\View\AppView $this
 * @var iterable<\App\Model\Entity\FreshInvoice> $freshInvoices
 */
$this->assign('title', 'Fresh Invoices');
?>

<div class="freshInvoices index content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><?= __('Fresh Invoices') ?></h3>
        <?= $this->Html->link(__('New Fresh Invoice'), ['action' => 'add'], ['class' => 'btn btn-primary']) ?>
    </div>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th><?= $this->Paginator->sort('invoice_number') ?></th>
                    <th><?= $this->Paginator->sort('client_id', 'Client') ?></th>
                    <th><?= $this->Paginator->sort('product_id', 'Product') ?></th>
                    <th><?= $this->Paginator->sort('bl_number', 'BL Number') ?></th>
                    <th><?= $this->Paginator->sort('quantity') ?></th>
                    <th><?= $this->Paginator->sort('total_value', 'Total Value') ?></th>
                    <th><?= $this->Paginator->sort('status') ?></th>
                    <th><?= $this->Paginator->sort('invoice_date') ?></th>
                    <th class="actions"><?= __('Actions') ?></th>
                </tr>
            </thead>
            <tbody>
                <?php foreach ($freshInvoices as $freshInvoice): ?>
                <tr>
                    <td><?= h($freshInvoice->invoice_number) ?></td>
                    <td><?= $freshInvoice->has('client') ? $this->Html->link($freshInvoice->client->name, ['controller' => 'Clients', 'action' => 'view', $freshInvoice->client->id]) : '' ?></td>
                    <td><?= $freshInvoice->has('product') ? h($freshInvoice->product->name) : '' ?></td>
                    <td><?= h($freshInvoice->bl_number) ?></td>
                    <td><?= $this->Number->format($freshInvoice->quantity, ['places' => 3]) ?></td>
                    <td><?= $this->Number->currency($freshInvoice->total_value, 'USD') ?></td>
                    <td>
                        <span class="badge bg-<?= $freshInvoice->status === 'approved' ? 'success' : ($freshInvoice->status === 'rejected' ? 'danger' : 'warning') ?>">
                            <?= h(ucfirst(str_replace('_', ' ', $freshInvoice->status))) ?>
                        </span>
                    </td>
                    <td><?= h($freshInvoice->invoice_date) ?></td>
                    <td class="actions">
                        <?= $this->Html->link(__('View'), ['action' => 'view', $freshInvoice->id], ['class' => 'btn btn-sm btn-info']) ?>
                        <?php if ($freshInvoice->status === 'draft'): ?>
                            <?= $this->Html->link(__('Edit'), ['action' => 'edit', $freshInvoice->id], ['class' => 'btn btn-sm btn-warning']) ?>
                            <?= $this->Form->postLink(__('Delete'), ['action' => 'delete', $freshInvoice->id], ['confirm' => __('Are you sure you want to delete invoice # {0}?', $freshInvoice->invoice_number), 'class' => 'btn btn-sm btn-danger']) ?>
                        <?php endif; ?>
                    </td>
                </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
    </div>
    
    <div class="paginator">
        <ul class="pagination">
            <?= $this->Paginator->first('<< ' . __('first')) ?>
            <?= $this->Paginator->prev('< ' . __('previous')) ?>
            <?= $this->Paginator->numbers() ?>
            <?= $this->Paginator->next(__('next') . ' >') ?>
            <?= $this->Paginator->last(__('last') . ' >>') ?>
        </ul>
        <p><?= $this->Paginator->counter(__('Page {{page}} of {{pages}}, showing {{current}} record(s) out of {{count}} total')) ?></p>
    </div>
</div>
